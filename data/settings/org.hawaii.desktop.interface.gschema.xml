<schemalist gettext-domain="hawaii">
  <schema id="org.hawaii.desktop.interface" path="/org/hawaii/desktop/interface/">
    <key name="cursor-blink" type="b">
      <default>true</default>
      <summary>Cursor Blink</summary>
      <description>
        Whether the cursor in text fields should blink.
      </description>
    </key>
    <key name="cursor-blink-time" type="i">
      <range min="100" max="2500"/>
      <default>1200</default>
      <summary>Cursor Blink Time</summary>
      <description>
        Length of the cursor blink cycle, in milliseconds.
      </description>
    </key>
    <key name="cursor-blink-timeout" type="i">
      <range min="1" max="2147483647"/>
      <default>10</default>
      <summary>Cursor Blink Timeout</summary>
      <description>
        Time after which the cursor stops blinking, in seconds.
      </description>
    </key>
    <key name="color-scheme" type="s">
      <default>'Hawaii'</default>
      <summary>Color Scheme</summary>
      <description>
        Color scheme for applications.
      </description>
    </key>
    <key name="icon-theme" type="s">
      <default>'Hawaii'</default>
      <summary>Icon Theme</summary>
      <description>
        Icon theme for applications.
      </description>
    </key>
    <key name="widgets-style" type="s">
      <default>'Fusion'</default>
      <summary>Widgets Style</summary>
      <description>
        Style for QtWidgets based applications.
      </description>
    </key>
    <key name="tool-button-style" type="s">
      <choices>
        <choice value='icon-only'/>
        <choice value='text-only'/>
        <choice value='text-beside-icon'/>
        <choice value='text-under-icon'/>
        <choice value='follow-style'/>
      </choices>
      <default>'icon-only'</default>
      <summary>Toolbar Style</summary>
      <description>
        Toolbar Style. Valid values are "icon-only", "text-only", "text-beside-icon",
        "text-under-icon", "follow-style".
      </description>
    </key>
    <key name="toolbar-icons-size" type="s">
      <choices>
        <choice value='small'/>
        <choice value='large'/>
      </choices>
      <default>'large'</default>
      <summary>Toolbar Icon Size</summary>
      <description>
        Size of icons in toolbars, either "small" or "large".
      </description>
    </key>
    <key name="font-name" type="s">
      <default>'Droid Sans'</default>
      <summary>Font Family</summary>
      <description>
        Font family for applications.
      </description>
    </key>
    <key name="font-size" type="i">
      <default>10</default>
      <summary>Font Size</summary>
      <description>
        Font size for applications.
      </description>
    </key>
    <key name="small-font-name" type="s">
      <default>'Droid Sans'</default>
      <summary>Small Font Family</summary>
      <description>
        Small font family for applications.
      </description>
    </key>
    <key name="small-font-size" type="i">
      <default>9</default>
      <summary>Small Font Size</summary>
      <description>
        Small font size for applications.
      </description>
    </key>
    <key name="mini-font-name" type="s">
      <default>'Droid Sans'</default>
      <summary>Mini Font Family</summary>
      <description>
        Mini font family for applications.
      </description>
    </key>
    <key name="mini-font-size" type="i">
      <default>8</default>
      <summary>Mini Font Size</summary>
      <description>
        Mini font size for applications.
      </description>
    </key>
  </schema>
</schemalist>
